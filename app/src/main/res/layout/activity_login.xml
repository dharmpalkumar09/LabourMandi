<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_login"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="156dp"
        android:layout_height="118dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="63dp"
        android:layout_marginEnd="129dp"
        android:layout_marginRight="129dp"
        android:contentDescription="@string/logo_name"
        app:srcCompat="@drawable/logo_3" />

    <EditText
        android:id="@+id/usernameText"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_below="@+id/imageView3"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="75dp"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="75dp"
        android:layout_marginRight="75dp"
        android:autofillHints="@string/user_name"
        android:background="#433434"
        android:drawableLeft="@drawable/ic_account_circle_black_24dp"
        android:ems="10"
        android:hint="@string/user_name"
        android:inputType="textPersonName"
        android:textColor="#F8F3F3" />

    <EditText
        android:id="@+id/passwordText"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_below="@+id/usernameText"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="75dp"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="75dp"
        android:layout_marginRight="75dp"
        android:autofillHints="@string/user_password"
        android:background="#433434"
        android:drawableLeft="@drawable/ic_lock_black_24dp"
        android:ems="10"
        android:hint="@string/user_password"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/forgotPassword"
        android:layout_width="146dp"
        android:layout_height="15dp"
        android:layout_below="@+id/passwordText"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="75dp"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="107dp"
        android:layout_marginRight="190dp"
        android:text="@string/user_login_forgot_password" />

    <Button
        android:id="@+id/user_login"
        android:layout_width="80dp"
        android:layout_height="42dp"
        android:layout_below="@+id/forgotPassword"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="271dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="75dp"
        android:layout_marginRight="74dp"
        android:background="#f36f27"
        android:text="@string/user_login_button" />

    <Button
        android:id="@+id/user_registration_button"
        android:layout_width="247dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_login"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="79dp"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="75dp"
        android:layout_marginRight="75dp"
        android:layout_marginBottom="75dp"
        android:background="#433434"
        android:text="@string/user_registration_button"
        android:textColor="#FFFFFF" />


</RelativeLayout>